{% extends "layout.njk" %} 

{% block content %}
  <div class="container mx-auto flex flex-wrap">
    {% for person in persons %}
      <div class="w-full md:w-1/2 lg:w-1/3 xl:w-1/4 p-4">
        <div class="bg-white shadow-xl rounded">
          <div class="overflow-hidden">
            <img class="object-cover h-64 md:h32 w-full" src="{{person.photo}}" />
          </div>
          <h3>{{ person.titre }}</h3>
          <h2>{{ person.prenom }} {{ person.nom }}<h2>
          <h4>{{ person.sous_titre }}</h4>
          <a href="/person/{{person.$slug}}.html" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Voir le profil
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}

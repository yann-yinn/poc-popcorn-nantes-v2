{% extends "layout.njk" %} 

{% block content %}

  <div class="container mx-auto mt-10 px-10">
    <div class="flex flex-wrap">
      <div class="w-full md:w-1/4 md:pr-10">
        <img src="{{entity.photo}}" />
      </div>
      <div class="w-full mt-10 md:w-3/4 md:mt-0">
        <div class="flex flex-wrap items-start">
          <div class="w-full md:w-3/4">
            <h1 class="font-bold text-xl">{{ entity.prenom }} {{ entity.nom }}, {{ entity.titre }}</h1>
            <div class="italic">{{entity.sous_titre}}</div>
          </div>
          <div class="w-full md:w-1/4">
            <div>
              <div onclick="showModal()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Proposer un projet
              </div>
            </div>
          </div>
        </div>
        <div class="html-content">
          {{ entity.$html }}
        </div>
        <div class="mt-6">
          {% for technology in entity.technologies %}
          <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-xs font-semibold text-gray-700 mr-2 my-1">
            {{technology}}
          </span>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  <div id="person-contact-modal" style="display:none">
    <div class="flex items-center justify-center fixed left-0 bottom-0 w-full h-full bg-gray-800">
      <div class="bg-white rounded-lg w-1/2">
        <div class="flex flex-col items-start p-4">
          <div class="flex items-center w-full">
            <div class="text-gray-900 font-medium text-lg">Contacter {{entity.prenom}} {{entity.nom}}</div>
              <svg onclick="closeModal()" class="ml-auto fill-current text-gray-700 w-6 h-6 cursor-pointer" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 18">
                <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"/>
              </svg>
            </div>
          <hr>
          <div class="">
            {{entity.titre}}
            thibault@finot-developpement.com
            Indiquez-lui que vous l'avez trouv√©¬∑e sur Popcorn :)
            <br />
            üçø
          </div>
          <hr>
          <div class="ml-auto">
            <button onclick="closeModal()" class="cursor-pointer person-contact-modal-close bg-transparent hover:bg-gray-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const contactModal = document.getElementById("person-contact-modal");

    function closeModal() {
      contactModal.style.display = "none"
    }

    function showModal() {
      contactModal.style.display = "block"
    }
  </script>


{% endblock %}



{% extends "layout.njk" %} 

{% block scripts %}
  <script src="/search.js"></script>
{% endblock %}

{% block meta %}
  <title>Popcorn Nantes</title>
  <meta name="description" content="Trouvez un développeur freelance à Nantes sans intermédiaire et sans frais."/>
  <meta property="og:site_name" content="Popcorn"/>
  <meta property="og:url" content="{{SITE_BASE_URL}}"/>
  <meta property="og:title" content="Popcorn : trouvez un développeur freelance à Nantes"/>
  <meta property="og:url" content="{{SITE_BASE_URL}}"/>
  <meta property="og:image" content="{{SITE_BASE_URL}}/images/popcorn.jpg"/>
  <meta property="og:description" content="Trouvez un développeur freelance à Nantes sans intermédiaire et sans frais."/>
  <meta name="twitter:card" content="summary"/>
  <meta name="twitter:title" content="Popcorn : trouvez un·e développeur·e freelance à Nantes"/>
  <meta name="twitter:description" content="Trouvez un développeur freelance à Nantes sans intermédiaire et sans frais."/>
  <meta name="twitter:image" content="{{SITE_BASE_URL}}/images/popcorn.jpg"/>
{% endblock %}

{% block content %}

  <div class="container mx-auto text-center my-6">
    <h1 class="font-bold text-2xl">
    Trouvez un développeur freelance à Nantes</h1>
    <div><em>avec (vraiment) 0% de commission</em></div>
    {% include "searchBar.njk" %}
  </div>

  <div class="container mx-auto flex flex-wrap mb-6">
    {% for person in persons %}
      <div data-type="person" class="w-full sm:w-1/2 md:w-1/2 lg:w-1/3 xl:w-1/4 p-2" id="{{person.$slug}}" >
        <div class="bg-white shadow rounded">
          <div class="overflow-hidden rounded-t">
            <img class="object-cover h-64 md:h32 w-full" src="{{person.thumbnail}}" />
          </div>
          <div class="p-2 text-center">
            <h3 class="mt-3 text-gray-700 font-800 text-lg">{{ person.prenom }} {{ person.nom }}<h3>
            <h2 class="font-bold text-xl text-gray-700">{{ person.titre }}</h2>
            <h4 class="text-gray-700 font-thin mb-6 mt-1 text-sm">{{ person.sous_titre }}</h4>
            <div class="mt-6">
              {% for technology in person.technologies %}
              <span class="inline-block bg-gray-200 rounded-full px-3 py-2 text-xs font-semibold text-gray-700 mr-2 my-1">
                {{technology}}
              </span>
              {% endfor %}
            </div>
            <div class="my-6">
              <a href="/person/{{person.$slug}}.html" class="bg-blue-500 text-white font-bold py-2 px-4 rounded">
                Voir le profil
              </a>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
